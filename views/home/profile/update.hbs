{{>usernavbar}}

<div class="container">
    <div class="row">
        <div class="col l7 m9 s12">
            <div class="card">
                <div class="card-content">
                    <h5 class="font-slim_">Update Profile</h5>
                    <hr>
                    <div class="row">
                        <form class="col s12">
                            <div class="row">
                                <div class="col s12">
                                    <div id="reporter"></div>
                                </div>
                                <div class="input-field col s12">
                                    <input id="firstname" type="text" class="_validate" value="{{user_data.firstname}}">
                                    <label for="firstname" >Firstname...</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="lastname" type="text" class="_validate" value="{{user_data.lastname}}">
                                    <label for="username" >Lastname...</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="username" type="text" class="_validate" data-length="16" value="{{user_data.username}}">
                                    <label for="username" >Username...</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="email" type="text" class="_validate" value="{{user_data.email}}">
                                    <label for="email" >Email...</label>
                                </div>
                                <div class="input-field col s12">
                                    <select id="gender">
                                        <option value="" >Choose gender</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                        <option value="all">All</option>
                                    </select>
                                    <label>My Gender</label>
                                </div>
                                <div class="input-field col s12">
                                    <input type="text" class="datepicker" id="dob">
                                    <label for="dob">Date of Birth</label>
                                </div>
                                <div class="input-field col s12">
                                    <select id="sexual_preference">
                                        <option value="" >Choose Sexual Preference</option>
                                        <option value="male">Males</option>
                                        <option value="female">Females</option>
                                        <option value="all">All</option>
                                    </select>
                                    <label>My Gender</label>
                                </div>
                                <div class="input-field col s12">
                                    <textarea id="bio" class="_validate materialize-textarea">{{user_data.biography}}</textarea>
                                    <label for="bio" >Biography...</label>
                                </div>

                                <!--
                                <div class="file-field input-field">
                                    <div class="btn">
                                        <span>File</span>
                                        <input type="file" id="img" />
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text" />
                                    </div>
                                </div>
                                -->
                            </div>
                            <button class="btn btn-block waves-effect waves-light" type="submit" id="btn_save">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>